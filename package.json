{
  "name": "vmini-build",
  "version": "0.0.2",
  "description": "A vue syntax compiler and cli for vue-mini",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "vmini": "bin/vmini.js"
  },
  "files": [
    "dist",
    "types",
    "bin"
  ],
  "author": "b2nil",
  "license": "MIT",
  "scripts": {
    "dev": "esbuild src/index.ts --outfile=dist/index.js --format=cjs --platform=node --tree-shaking=true --external:esbuild --external:url --external:pug --external:postcss-pxtransform --external:@vue/* --bundle",
    "build": "yarn dev --minify",
    "test": "jest"
  },
  "peerDependencies": {
    "@vue/compiler-sfc": "^3.2.31",
    "esbuild": "^0.14.21"
  },
  "dependencies": {
    "cac": "^6.7.12"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@vue/compiler-sfc": "^3.2.31",
    "esbuild": "^0.14.22",
    "esbuild-jest": "^0.5.0",
    "jest": "^27.5.1"
  }
}